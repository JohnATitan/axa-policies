<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="mx.axa.insurance_policy_list.ui.fragment.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/enter_animation_ib"
            app:popExitAnim="@anim/exit_animation_ib"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="mx.axa.insurance_policy_list.ui.fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_policyListFragment"
            app:destination="@id/policyListFragment"
            app:enterAnim="@anim/enter_animation_ib"

            app:popExitAnim="@anim/exit_animation_ib"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/policyListFragment"
        android:name="mx.axa.insurance_policy_list.ui.fragment.PolicyListFragment"
        android:label="fragment_policy_list"
        tools:layout="@layout/fragment_policy_list">
    </fragment>

</navigation>